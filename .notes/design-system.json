{
"designSystem": {
"name": "Blossomer GTM Dashboard",
"version": "1.1.0",
"description": "Clean, sophisticated SaaS design system with minimal shadows and clear hierarchy",
"colors": {
  "primary": {
    "base": "#387FF5",
    "hover": "#2968DD",
    "active": "#1E57C6",
    "light": "#EBF5FF",
    "dark": "#1A4AA8"
  },
  "accent": {
    "orange": "#F59E42"
  },
  "background": {
    "default": "#FAFAFA",
    "hero": "#FFF8F1",
    "surface": "#FFFFFF",
    "gradient": "linear-gradient(180deg, #FFF8F1 0%, #FAFAFA 100%)"
  },
  "border": {
    "default": "#E5E7EB"
  },
  "text": {
    "main": "#1A1A1A",
    "muted": "#6B7280",
    "accent": "#F59E42"
  },
  "secondary": {
    "purple": "#6B4EF6",
    "purpleHover": "#5A3FE5",
    "purpleLight": "#F3F0FF"
  },
  "neutral": {
    "black": "#1A1A1A",
    "gray900": "#111827",
    "gray800": "#1F2937",
    "gray700": "#374151",
    "gray600": "#4B5563",
    "gray500": "#6B7280",
    "gray400": "#9CA3AF",
    "gray300": "#D1D5DB",
    "gray200": "#E5E7EB",
    "gray100": "#F3F4F6",
    "gray50": "#FAFAFA",
    "white": "#FFFFFF"
  },
  "semantic": {
    "success": "#10B981",
    "warning": "#F59E0B",
    "error": "#EF4444",
    "info": "#3B82F6"
  },
  "special": {
    "amber50": "#FEF3C7",
    "amber200": "#FCD34D",
    "amber600": "#D97706",
    "amber800": "#92400E"
  }
},

"typography": {
  "fontFamily": {
    "primary": "Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
    "mono": "'SF Mono', Monaco, Consolas, monospace"
  },
  "fontSize": {
    "xs": "11px",
    "sm": "13px",
    "base": "14px",
    "md": "16px",
    "lg": "18px",
    "xl": "24px"
  },
  "fontWeight": {
    "regular": "400",
    "medium": "500",
    "semibold": "600",
    "bold": "700"
  },
  "lineHeight": {
    "tight": "1.2",
    "base": "1.5",
    "relaxed": "1.6"
  },
  "letterSpacing": {
    "tight": "-0.02em",
    "normal": "0",
    "wide": "0.05em"
  }
},

"spacing": {
  "unit": "4px",
  "xs": "4px",
  "sm": "8px",
  "md": "12px",
  "lg": "16px",
  "xl": "20px",
  "2xl": "24px",
  "3xl": "32px",
  "4xl": "48px",
  "5xl": "64px",
  "6xl": "96px"
},

"borderRadius": {
  "none": "0",
  "sm": "4px",
  "base": "6px",
  "md": "8px",
  "lg": "12px",
  "xl": "24px",
  "2xl": "32px",
  "3xl": "48px",
  "full": "9999px",
  "pill": "9999px"
},

"shadows": {
  "xs": "0 1px 2px 0 rgba(16, 24, 40, 0.05)",
  "sm": "0 1.5px 6px 0 rgba(16, 24, 40, 0.08)",
  "md": "0 4px 24px 0 rgba(16, 24, 40, 0.12)",
  "lg": "0 8px 32px 0 rgba(16, 24, 40, 0.16)"
},

"elementStyling": {
  "pageBackground": {
    "DO": {
      "background": "#FAFAFA"
    },
    "DO_NOT": [
      "Use beige or warm colors for page background",
      "Apply gradients to page background"
    ]
  },

  "cards": {},
  "buttons": {},
  "navigation": {},
  "lists": {},
  "forms": {},
  "emptyStates": {},
  "modals": {},
  "metadata": {},
  "notifications": {
    "update": {},
    "errorBanner": {
      "DO": {
        "background": "#FEE2E2",
        "border": "1px solid #FCA5A5",
        "borderRadius": "6px",
        "color": "#B91C1C",
        "padding": "12px 16px"
      }
    }
  },
  "icons": {},
  "skeleton": {
    "DO": {
      "background": "#E5E7EB",
      "borderRadius": "6px",
      "height": "140px",
      "animation": "pulse 1.5s ease-in-out infinite"
    }
  }
},

"interactions": {
  "transitions": {
    "default": "all 0.2s ease",
    "fast": "all 0.15s ease",
    "slow": "all 0.3s ease"
  },
  "hover": {
    "lift": "none",
    "scale": "none",
    "shadowIncrease": "minimal"
  },
  "focus": {
    "outline": "none",
    "boxShadow": "0 0 0 3px rgba(56, 127, 245, 0.1)"
  },
  "keyframes": {
    "pulse": "@keyframes pulse { 0%,100%{opacity:1;} 50%{opacity:0.4;} }"
  }
},

"doNotRules": [
  "DO NOT apply gradients to any UI elements",
  "DO NOT use shadows as primary elevation method",
  "DO NOT scale elements on hover",
  "DO NOT use border radius larger than 8px for cards",
  "DO NOT use dark backgrounds except for specific overlays",
  "DO NOT apply primary colors to body text",
  "DO NOT use colors outside the defined palette",
  "DO NOT animate height or width properties (except pulse skeleton)",
  "DO NOT use font sizes smaller than 11px",
  "DO NOT apply card styles to buttons or vice versa"
]

}
} 